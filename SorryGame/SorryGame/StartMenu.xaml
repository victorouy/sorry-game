<Window x:Class="SorryGame.StartMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SorryGame"
        mc:Ignorable="d"
        Title="StartMenu" Height="450" Width="800">
  
    <Grid Margin="0,0,0,0" Background="FloralWhite">
        <Button Background="Black" Content="Start" x:Name="StartBtn" Margin="143,283,413.6,73" Foreground="White" Click="StartBtn_Click" FontSize="20" />
        <Button Background="Black" Content="Load" x:Name="LoadBtn" Margin="431,283,125.6,73" Foreground="White" Click="LoadBtn_Click" FontSize="20" />
        <Image Margin="671,108,30.6,238" Source="red.png" Stretch="Fill"/>
        <Image Margin="10,144,707.6,207" Source="yellow.png" Stretch="Fill"/>
        <Image Margin="697,187,3.6,164" Source="green.png" Stretch="Fill"/>
        <Image Margin="33,213,666.6,138" Source="blue.png" Stretch="Fill"/>
        <Image Margin="143,10,122.6,164" Source="sorrylogo.png" Stretch="Fill"/>
    </Grid>
</Window>
